@model IEnumerable<SalonHappiness.Models.Hairstyle>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Frisurer</h2>

<p>
    @Html.ActionLink("Opret Ny Frisure", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>Billede</th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (item.HairstyleFiles.Any(f => f.FileType == SalonHappiness.Models.FileType.Avatar))
                {
                    <img src="~/HairstyleFile?id=@item.HairstyleFiles.First(f => f.FileType == SalonHappiness.Models.FileType.Avatar).HairstyleFileId" alt="avatar" width="75" height="85" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                @Html.ActionLink("Redigere", "Edit", new { id = item.HairstyleId }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Detaljer", "Details", new { id = item.HairstyleId }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Slet ", "Delete", new { id = item.HairstyleId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
