@model SalonHappiness.Models.RegisterViewModel
@{
    ViewBag.Title = "Tilmeld dig";
}

<section class="section-margin--large pb-xl-2">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 mb-5 mb-lg-0">
                <div class="about__content">
                    <div class="section-intro">
                        <h4 class="section-intro__title">
                            Oprette en ny konto
                        </h4>
                        <h2 class="section-intro__subtitle">
                            Tilmeld dig
                        </h2>
                    </div>
                    @Html.Partial("_MailAccountSendt")
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <hr />
                        @Html.ValidationSummary("", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.LabelFor(m => m.Fname, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Fname, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-5 control-label" })
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.CheckBoxFor(m => m.Accepted) @Html.LabelFor(m => m.Accepted, new { @class = "control-label" }) og
                                <a href="" data-toggle="modal" data-target="#exampleModalScrollable">
                                    samtykke
                                </a>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                Allerede tilmeldt!
                                @Html.ActionLink("Log ind her", "Login", "Account")
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-primary" value="Tilmeld" />
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-5 offset-lg-2">
                <div class="about__content">
                    <div class="section-intro">
                        <h4 class="section-intro__title">Tilmed dig og book tid</h4>
                        <h2 class="section-intro__subtitle">
                            Salon Happiness
                        </h2>
                    </div>
                    <img src="~/Content/img/salon.jpg" width="550" />
                </div>
            </div>
        </div>
    </div>
</section>
<div class="modal fade" id="exampleModalScrollable" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalScrollableTitle">Samtykke</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Action("_Samtykke", "Home", new SalonHappiness.Models.Samtykke())
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Luk</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script type="text/javascript">
    (function ($) {
        $.validator.unobtrusive.adapters.addBool("checkboxrequired", "required");
    }(jQuery));
</script>