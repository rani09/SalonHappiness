@model IEnumerable<SalonHappiness.Models.OpenOrClosse>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Åbent eller Lukket</h2>

@if (Model.Count() == 0)
{
    <p>
        @Html.ActionLink("Opret", "Create", null, new { @class = "btn btn-success" })
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OpenOrLukket)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpenOrLukket)
            </td>
            <td>
                @Html.ActionLink("Redigere", "Edit", new { id = item.OpenOrClosseId }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Detaljer", "Details", new { id = item.OpenOrClosseId }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Slet ", "Delete", new { id = item.OpenOrClosseId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
