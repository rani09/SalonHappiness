@model IEnumerable<SalonHappiness.Models.AboutUs>
@{
    ViewBag.Title = "Om Salon Happiness";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="section-margin--large pb-xl-2">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-5 mb-5 mb-lg-0">
                    <div class="about__content">
                        <div class="section-intro">
                            <h4 class="section-intro__title">Om Salon Happiness</h4>
                            <h2 class="section-intro__subtitle">@item.Title</h2>
                        </div>
                        @Html.Raw(item.Description)
                        @*<a class="button" href="#">Indlæse mere</a>*@
                    </div>
                </div>
                <div class="col-lg-5 offset-lg-2">
                    @if (item.AboutUsFiles.Any(f => f.FileType == SalonHappiness.Models.FileType.Avatar))
                    {
                        <img src="~/AboutUsFile?id=@item.AboutUsFiles.First(f => f.FileType == SalonHappiness.Models.FileType.Avatar).AboutUsFileId" alt="">
                    }
                </div>
            }
        </div>
    </div>
</section>
@Html.Action("_Teams", "Home", new SalonHappiness.Models.Team())
