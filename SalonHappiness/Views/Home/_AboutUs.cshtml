@model IEnumerable<SalonHappiness.Models.AboutUs>

@foreach (var item in Model)
{
    <div class="col-lg-5 mb-5 mb-lg-0">
        <div class="about__content">
            <div class="section-intro">
                <h4 class="section-intro__title">Om Salon Happiness</h4>
                <h2 class="section-intro__subtitle">
                    Frisør i Hjallerup
                </h2>
                <img src="~/Content/img/AboutSalon.PNG" />
            </div>
            <p>@Html.Raw(item.Description.Substring(0, Math.Min(item.Description.Length, 305))) ...</p>
            <a class="button" href="@Url.Action("About", "Home")">Læs mere</a>
        </div>
    </div>
}