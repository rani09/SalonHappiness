@model SalonHappiness.Models.EmailFormModel
@{
    ViewBag.Title = "Kontakt os";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="section-margin--large pb-xl-2" style="margin: 80px 0">
    <div class="embed-con">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2410.902091560513!2d10.141312227278771!3d57.163831408180286!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x464ed561b0719475%3A0x50afd03022edf0c8!2sSalon%20Happiness!5e0!3m2!1sda!2sdk!4v1576805540864!5m2!1sda!2sdk" width="1520" height="450" frameborder="0" style="border:0; margin:0;" allowfullscreen=""></iframe>
    </div>
</section>
<section class="section-margin">
    <div class="container">
        <div class="row">
            @Html.Action("_Contact", "Home", new SalonHappiness.Models.Contract())
            <div class="col-md-8 col-lg-9">
                @Html.Partial("_MailSendt")
                <h4 class="section-intro__title">Kontaktformular</h4>
                @Html.Action("_ContactText", "Home", new SalonHappiness.Models.Contract())
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row">
                        <div class="col-lg-5">
                            <div class="form-group">
                                <label>Indtast dit navn</label>
                                @Html.EditorFor(model => model.FromName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Fuld navn" } })
                                @Html.ValidationMessageFor(model => model.FromName, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Indtast din e-mail adresse</label>
                                @Html.TextBoxFor(model => model.FromEmail, new { @class = "form-control", @placeholder = "Gyldig e-mail adresse" })
                                @Html.ValidationMessageFor(model => model.FromEmail, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-lg-7">
                            <div class="form-group">
                                <label>Indtast din besked</label>
                                @Html.TextAreaFor(model => model.Message, new { @class = "form-control different-control w-100", @placeholder = "Din besked", cols = "30", rows = "5" })
                                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>

                    <div class="form-group text-center text-md-right mt-3">
                        <button type="submit" class="button">Send Beskeden <i class="far fa-paper-plane"></i></button>
                    </div>
                }

            </div>
        </div>

    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}